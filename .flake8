[flake8]
max-line-length = 100
exclude = .git,__pycache__,venv,build,dist,.eggs,.tox,.mypy_cache
ignore =
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator
    W503,
    # E203: whitespace before ':'
    E203,
extend-ignore =
    # E266: too many leading '#' for block comment
    E266,
per-file-ignores =
    __init__.py:F401
